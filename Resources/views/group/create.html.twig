{% extends '@stefanwiegmann_user/default/layout.html.twig' %}
{% trans_default_domain 'SWUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.group.create'|trans }}</small> {% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <strong>{{ form_label(form.name) }}</strong>
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ 'label.avatar'|trans }}
      </div>
      <div class="col-sm-10">
        avatar
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <strong>{{ form_label(form.groupRole) }}</strong>
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.groupRole) }}
        {{ form_widget(form.groupRole) }}
      </div>
    </div>

{{ form_end(form) }}
{% endblock content %}
