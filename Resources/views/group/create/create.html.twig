{% extends '@stefanwiegmann_user/default/layout.html.twig' %}
{% trans_default_domain 'SWUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}{{ 'header.create'|trans }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}
<!-- info row -->
<div class="row">
    <div class="card">
      <h5 class="card-header">{{ 'label.info'|trans }}</h5>
      <div class="card-body">
        info
      </div>
    </div>
</div>

<br>
<!-- actual form -->

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ form_label(form.name) }}
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ 'label.avatar'|trans }}
      </div>
      <div class="col-sm-10">
        avatar
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ form_label(form.groupRole) }}
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.groupRole) }}
        {{ form_widget(form.groupRole) }}
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ 'label.users'|trans }}
      </div>
      <div class="col-sm-10">
        users
      </div>
    </div>


{{ form_end(form) }}

<br>
<div class="row">
    <div class="card">
      <h5 class="card-header">{{ 'label.log'|trans }}</h5>
      <div class="card-body">
        log
      </div>
    </div>

</div>
{% endblock content %}
