{% extends '@stefanwiegmann_user/default/layout.html.twig' %}
{% trans_default_domain 'SWUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.group.view'|trans }}</small> {{ group.name }}{% endblock pageTitle %}
{% block pageMenu %}

{% endblock pageMenu %}

{% block content %}

<!-- tab bar -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('sw_user_group_view_detail', {'slug': group.slug}) }}">{{ 'label.details'|trans }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('sw_user_group_view_member', {'slug': group.slug}) }}">{{ 'label.member_s'|trans }}  <span class="badge badge-primary">{{group.users|length}}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">{{ 'label.role_s'|trans }} <span class="badge badge-primary">{{group.groupRoles|length}}</span></a>
      </li>
    </ul>

<br>
<!-- actual table -->

<table class="table table-striped">
<thead> <tr>
  <th>{{ knp_pagination_sortable(roleList, '#', 'r.id') }}</th>
  <th>{{ knp_pagination_sortable(roleList, 'label.name'|trans, 'r.name') }}
    {% if roleList.isSorted('r.name') %}<i class="fas fa-sort" aria-hidden="true"></i>{% endif %}
  </th>
</tr> </thead>
{% for item in roleList %}
<tr>
  <td>{{ item.id }}</td>
  <td>{{ item.translationKey|trans({}, 'Roles') }}</td>
</tr>
{% endfor %}
</table>
{# display navigation #}
      {{ knp_pagination_render(roleList) }}

{% endblock content %}
