{% extends '@StewieUser/default/layout.html.twig' %}
{% trans_default_domain 'StewieUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.group.edit'|trans }}</small> {{ group.name }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}

<!-- tab bar -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('stewie_user_group_edit_detail', {'slug': group.slug}) }}">{{ 'label.details'|trans }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('stewie_user_group_edit_member', {'slug': group.slug}) }}">{{ 'label.member_s'|trans }}  <span class="badge badge-primary">{{group.users|length}}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">{{ 'label.role_s'|trans }}  <span class="badge badge-primary">{{group.groupRoles|length}}</a>
      </li>
    </ul>

<br>

<!-- actual form -->

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <strong>{{ form_label(form.groupRoles) }}</strong>
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.groupRoles) }}
        {{ form_widget(form.groupRoles) }}
      </div>
    </div>


{{ form_end(form) }}
{% endblock content %}
