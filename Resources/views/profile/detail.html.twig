{% extends '@StefanwiegmannUser/default/layout.html.twig' %}
{% trans_default_domain 'SWUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.profile.edit'|trans }}</small> {{ user.username }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}

<!-- tab bar -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">{{ 'label.details'|trans }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('sw_user_profile_password') }}">{{ 'label.password'|trans }}</a>
      </li>
    </ul>

<br>
<!-- actual form -->

<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <strong>{{ form_label(form.username) }}</strong>
  </div>
  <div class="col-sm-10">
    {{ form_errors(form.username) }}
    {{ form_widget(form.username) }}
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <strong>{{ 'label.avatar'|trans }}</strong>
  </div>
  <div class="col-sm-10">
    avatar
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <strong>{{ form_label(form.email) }}</strong>
  </div>
  <div class="col-sm-10">
    {{ form_errors(form.email) }}
    {{ form_widget(form.email) }}
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <strong>{{ 'label.fullName'|trans }}</strong>
  </div>
  <div class="col-sm-auto">
    {{ form_errors(form.firstName) }}
    {{ form_widget(form.firstName, {'attr': {'placeholder': 'label.firstName'} }) }}
  </div>
  <div class="col-sm-auto">
    {{ form_errors(form.lastName) }}
    {{ form_widget(form.lastName, {'attr': {'placeholder': 'label.lastName'} }) }}
  </div>
</div>


{{ form_end(form) }}
{% endblock content %}
