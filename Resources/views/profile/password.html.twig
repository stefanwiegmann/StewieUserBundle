{% extends '@stefanwiegmann_user/default/layout.html.twig' %}
{% trans_default_domain 'SWUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.profile.edit'|trans }}</small> {{ user.username }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}

<!-- tab bar -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('sw_user_profile') }}">{{ 'label.details'|trans }}</a>
      </li>
        <li class="nav-item">
          <a class="nav-link active" href="#">{{ 'label.password'|trans }}</a>
        </li>
    </ul>

<br>
<!-- actual form -->

<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <strong>{{ form_label(form.password.first) }}</strong>
  </div>
  <div class="col-sm-10">
    {{ form_errors(form.password.first) }}
    {{ form_widget(form.password.first) }}
  </div>
</div>

<div class="form-group row">
  <div class="col-sm-2 col-form-label">
    <strong>{{ form_label(form.password.second) }}</strong>
  </div>
  <div class="col-sm-10">
    {{ form_errors(form.password.second) }}
    {{ form_widget(form.password.second) }}
  </div>
</div>

{{ form_end(form) }}
{% endblock content %}
