{% extends '@stefanwiegmann_user/default/layout.html.twig' %}
{% trans_default_domain 'SWUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}{{ 'header.register'|trans }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}
<!-- actual form -->

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ 'label.fullName'|trans }}
      </div>
      <div class="col-sm-auto">
        {{ form_errors(form.firstName) }}
        {{ form_widget(form.firstName, {'attr': {'placeholder': 'label.firstName'} }) }}
      </div>
      <div class="col-sm-auto">
        {{ form_errors(form.lastName) }}
        {{ form_widget(form.lastName, {'attr': {'placeholder': 'label.lastName'} }) }}
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        {{ form_label(form.email) }}
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
      </div>
    </div>


{{ form_end(form) }}
{% endblock content %}
