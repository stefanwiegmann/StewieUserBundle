{% extends 'layout.html.twig' %}
{% trans_default_domain 'StewieUserBundle' %}

{% block menuTitle %}{{ 'header.menu'|trans }}{% endblock menuTitle %}

{% block menuContent %}
<li class="nav-item {% if app.request.attributes.get('_route') == 'stewie_user_list' %} active{% endif %}">
  <a class="nav-link" href="{{ path('stewie_user_list') }}">{{ 'label.menu.users'|trans }}</a></li>
<li class="nav-item {% if app.request.attributes.get('_route') == 'stewie_user_register' %} active{% endif %}">
  <a class="nav-link" href="{{ path('stewie_user_register') }}">{{ 'header.register'|trans }}</a></li>
<li class="nav-item {% if app.request.attributes.get('_route') == 'stewie_user_group_list' %} active{% endif %}">
  <a class="nav-link" href="{{ path('stewie_user_group_list') }}">{{ 'label.menu.groups'|trans }}</a></li>
<li class="nav-item {% if app.request.attributes.get('_route') == 'stewie_user_role_list' %} active{% endif %}">
  <a class="nav-link" href="{{ path('stewie_user_role_list') }}">{{ 'label.menu.roles'|trans }}</a></li>
{% endblock menuContent %}
