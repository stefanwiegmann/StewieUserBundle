{% extends '@StewieUser/default/layout.html.twig' %}
{% trans_default_domain 'StewieUserBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.user.edit'|trans }}</small> {{ user.username }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}

<!-- tab bar -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('stewie_user_user_edit_detail', {'username': user.username}) }}">{{ 'label.details'|trans }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('stewie_user_user_edit_group', {'username': user.username}) }}">{{ 'label.group_s'|trans }}  <span class="badge badge-primary">{{user.groups|length}}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">{{ 'label.role_s'|trans }}  <span class="badge badge-primary">{{user.userRoles|length}}</a>
      </li>
    </ul>

<br>

<!-- actual form -->

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <strong>{{ form_label(form.userRoles) }}</strong>
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.userRoles) }}
        {{ form_widget(form.userRoles) }}
      </div>
    </div>

{{ form_end(form) }}

<div class=" row">
  <div class="col-sm-2">
  </div>
  <div class="col-sm-10">
    <small class="text-muted">The following roles are already inherited through group memberships.</small>
  </div>
</div>

{% endblock content %}
